@model IEnumerable<A_Manager.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus"></i>  Add New</a>
</p>
<table  id="MyDataTableID">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.full_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.local_full_name)
            </th>
            
          
           
            <th>
                @Html.DisplayNameFor(model => model.badge_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.job_title)
            </th>
           
           
            <th>
                @Html.DisplayNameFor(model => model.profile_photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.is_active)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.full_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.local_full_name)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.badge_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.job_title)
            </td>
          
       
           
            <td>

                    <img src="@("upload/users/"+item.email+"/"+item.profile_photo_url)" style="max-width:120px; max-height:140px; background-color:#dddddd;" alt="No Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_active)
            </td>
           
            <td>
                    <a asp-action="Edit" asp-route-id="@item.id"><i class=" btn bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.id"><i class="btn bi bi-eye-fill"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.id"><i class="btn bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
